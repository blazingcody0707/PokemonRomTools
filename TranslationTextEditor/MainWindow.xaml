<Window x:Class="PkmnAdvanceTranslation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PkmnAdvanceTranslation"
        xmlns:dvm="clr-namespace:PkmnAdvanceTranslation.ViewModels.Design"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance dvm:MainWindowViewModelDesign, IsDesignTimeCreatable=True}"
        Title="Pokémon Translation editor" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Command="{Binding OpenTranslationFileCommand}"/>
                <MenuItem Header="_Save" Command="{Binding SaveTranslationFileCommand}"/>
                <MenuItem Header="Save _As" Command="{Binding SaveTranslationFileAsCommand}"/>
                <MenuItem Header="_Close" Click="CloseMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DataGrid 
                Grid.Row="1" 
                ItemsSource="{Binding TranslationLinesView}"
                IsSynchronizedWithCurrentItem="True" 
                SelectedItem="{Binding CurrentTranslationItem}" 
                CanUserDeleteRows="True"                 
                CanUserAddRows="False"
                AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Addr." Binding="{Binding Address}"/>
                    <DataGridTextColumn Header="Ref#" Binding="{Binding ReferenceCount}" ElementStyle="{StaticResource AlignRight}"/>
                    <DataGridTextColumn Header="Avail." Binding="{Binding AvailableLength}" ElementStyle="{StaticResource AlignRight}"/>
                    <DataGridTextColumn Header="Remain." Binding="{Binding RemainingLength}" ElementStyle="{StaticResource AlignRight}"/>
                    <DataGridTextColumn Header="Single line text representation" Binding="{Binding Text}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="1" Text="{Binding CurrentTranslationItem.Text}"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
